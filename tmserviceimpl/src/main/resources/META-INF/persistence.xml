<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="tmdb">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<jta-data-source>java:/tm/tmdb</jta-data-source>
		<class>com.mbcsoft.ticketmaven.entity.Customer</class>
		<class>com.mbcsoft.ticketmaven.entity.Instance</class>
		<class>com.mbcsoft.ticketmaven.entity.Layout</class>
		<class>com.mbcsoft.ticketmaven.entity.Request</class>
		<class>com.mbcsoft.ticketmaven.entity.Reservation</class>
		<class>com.mbcsoft.ticketmaven.entity.Seat</class>
		<class>com.mbcsoft.ticketmaven.entity.Show</class>
		<class>com.mbcsoft.ticketmaven.entity.Ticket</class>
		<class>com.mbcsoft.ticketmaven.entity.TMPackage</class>
		<class>com.mbcsoft.ticketmaven.entity.TMTable</class>
		<class>com.mbcsoft.ticketmaven.entity.Zone</class>
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="drop-and-create" />
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />
				<property name = "hibernate.show_sql" value = "false" />
		</properties>

	</persistence-unit>
</persistence>
